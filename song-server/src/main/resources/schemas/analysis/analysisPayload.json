{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"id": "analysisPayload",
	"type": "object",
	"required": [ "study", "analysisType","experiment","sample","file"],
	"properties": {
		"study" : {
			"type": "string",
			"minLength": 1
		},
		"analysisType": {
			"type": "string",
			"enum": [ "variantCall" ]
		},
		"sample": {
			"type": "array",
			"minItems" : 1,
			"items": {
				"type": "object",
				"allOf" : [ {"$ref" : "definitions.json#/sample/sampleData" } ],
				"required": [
					"specimen",
					"donor"
				],
				"properties": {
					"specimen": { "$ref" : "definitions.json#/specimen/specimenData" },
					"donor": { "$ref" : "definitions.json#/donor/donorData" }
				}
			}
		},
		"file": {
			"type": "array",
			"minItems" : 1,
			"items": { "$ref" : "definitions.json#/file/fileData" }
		},
		"info": { "$ref" : "definitions.json#/common/info"},
		"analysisId": {
			"type": ["string","null"],
			"pattern" : "^[a-zA-Z0-9]{1}[a-zA-Z0-9-_]{1,34}[a-zA-Z0-9]{1}$"
		}
	}
}
