{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "analysis-update",
  "title": "Base schema for validating analysis update requests",
  "type" : "object",
  "required": ["analysisType"],
  "properties": {
    "analysisType": {
      "type" : "object",
      "required": ["name"],
      "properties" : {
        "name" : {
          "type" : "string"
        },
        "version" : {
          "type" : ["integer", "null"]
        }
      }
    },
    "study": {
      "not": {}
    },
    "analysisTypeId": {
      "not": {}
    },
    "analysisState" : {
      "not" : {}
    },
    "sample": {
      "not": {}
    },
    "file": {
      "not": {}
    },
    "analysisId": {
      "not": {}
    }
  }
}
