{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"id": "analysisRegistration",
	"type": "object",
	"required": [ "analysisType", "experimentSchema"],
    "definitions" : {
		"expField" : {
			"type" : "object",
			"properties": {
				"type" : {
					"enum": [
						"array",
						"boolean",
						"integer",
						"null",
						"number",
						"string"
					]
				}
			}
		}
	},
	"properties": {
		"analysisType" : {
			"type": "string",
			"minLength": 1
		},
		"experimentSchema" : {
			"type" : "object",
			"required": ["properties"],
          	"properties": {
				"required" : {
					"type" : "array",
					"items": {
						"type": "string"
					}
				},
				"properties" : {
					"type" : "object"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties" : false
}
