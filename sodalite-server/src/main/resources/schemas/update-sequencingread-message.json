{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://sodalite.icgc.org/messages/updateSequencingRead",
  "type": "object",
  "properties": {
    "apiVersion": {
      "id": "/properties/updateSequencingRead/properties/apiVersion",
      "type": "string"
    },
    "submissionId": {
      "id": "/properties/updateSequencingRead/properties/submissionId",
      "type": "string"
    },
    "sequencingRead": {
      "id": "/properties/updateSequencingRead/properties/sequencingRead",
      "type": "object",
      "properties": {
        "analysisId": {
          "id": "/properties/updateSequencingRead/properties/sequencingRead/properties/analysisId",
          "type": "string"
        },
        "aligned": {
          "id": "/properties/updateSequencingRead/properties/sequencingRead/properties/aligned",
          "type": "boolean"
        },
        "alignmentTool": {
          "id": "/properties/updateSequencingRead/properties/sequencingRead/properties/alignmentTool",
          "type": "string"
        },
        "insertSize": {
          "id": "/properties/updateSequencingRead/properties/sequencingRead/properties/insertSize",
          "type": "integer"
        },
        "libraryStrategy": {
          "id": "/properties/updateSequencingRead/properties/sequencingRead/properties/libraryStrategy",
          "type": "string",
          "enum": ["WGS", "WXS", "RNA-Seq", "ChIP-Seq", "miRNA-Seq", "Bisulfite-Seq", "Validation", "Amplicon", "Other" ]
        },
        "pairedEnd": {
          "id": "/properties/updateSequencingRead/properties/sequencingRead/properties/pairedEnd",
          "type": "boolean"
        },
        "referenceGenome": {
          "id": "/properties/updateSequencingRead/properties/sequencingRead/properties/referenceGenomeFiles",
          "type": "string"
        }
      },
      "required":["analysisId"]
    },
    "study": {
      "id": "/properties/updateSequencingRead/properties/study",
      "type": "object",
      "properties": {
        "studyId": {
          "id": "/properties/updateSequencingRead/properties/study/properties/studyId",
          "type": "string"
        },
        "donor": {
          "id": "/properties/updateSequencingRead/properties/study/properties/donor",
          "type": "object",
          "properties": {
            "donorId": {
              "id": "/properties/updateSequencingRead/properties/study/properties/donor/properties/donorId",
              "type": "string"
            },
            "specimen": {
              "id": "/properties/updateSequencingRead/properties/study/properties/donor/properties/specimen",
              "type": "object",
              "properties": {
                "specimenId": {
                  "id": "/properties/updateSequencingRead/properties/study/properties/donor/properties/specimen/properties/specimenId",
                  "type": "string"
                },
                "sample": {
                  "id": "/properties/updateSequencingRead/properties/study/properties/donor/properties/specimen/properties/sample",
                  "type": "object",
                  "properties": {
                    "sampleId": {
                      "id": "/properties/updateSequencingRead/properties/study/properties/donor/properties/specimen/properties/sample/properties/sampleId",
                      "type": "string"
                    },
                    "files": {
                      "id": "/properties/updateSequencingRead/properties/study/properties/donor/properties/specimen/properties/sample/properties/files",
                      "type": "array",
                      "items": {
                        "id": "/properties/updateSequencingRead/properties/study/properties/donor/properties/specimen/properties/sample/properties/files/items",
                        "type": "object",
                        "properties": {
                          "objectId": {
                            "id": "/properties/updateSequencingRead/properties/study/properties/donor/properties/specimen/properties/sample/properties/files/items/properties/objectId",
                            "type": "string"
                          }
                        },
                        "required":["objectId"]
                      }
                    }
                  },
                  "required":["sampleId"]
                }
              },
              "required":["specimenId"]
            }
          },
          "required":["donorId"]
        }
      },
      "required":["studyId", "donor"]
    }
  },
  "required":["apiVersion", "sequencingRead"]
}
