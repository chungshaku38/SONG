{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://sodalite.icgc.org/messages/updateEntity",
  "type": "object",
  "properties": {
    "entityUpdate": {
      "id": "/properties/entityUpdate",
      "type": "object",
      "properties": {
        "apiVersion": {
          "id": "/properties/entityUpdate/properties/apiVersion",
          "type": "string"
        },
        "submissionId": {
          "id": "/properties/entityUpdate/properties/submissionId",
          "type": "string"
        },
        "donors": {
          "id": "/properties/entityUpdate/properties/donors",
          "type": "array",
          "items": {
            "id": "/properties/entityUpdate/properties/donors/items",
            "type": "object",
            "properties": {
              "donorId": {
                "id": "/properties/entityUpdate/properties/donors/items/properties/donorId",
                "type": "string"
              },
              "donorSubmitterId": {
                "id": "/properties/entityUpdate/properties/donors/items/properties/donorSubmitterId",
                "type": "string"
              },
              "donorGender": {
                "id": "/properties/entityUpdate/properties/donors/items/properties/donorGender",
                "type": "string",
                "enum": ["male", "female", "unspecified"]
              }
            },
            "required": ["donorId"]
          }
        },
        "specimens": {
          "id": "/properties/entityUpdate/properties/specimens",
          "type": "array",
          "items": {
            "id": "/properties/entityUpdate/properties/specimens/items",
            "type": "object",
            "properties": {
              "specimenId": {
                "id": "/properties/entityUpdate/properties/specimens/items/properties/specimenId",
                "type": "string"
              },
              "specimenSubmitterId": {
                "id": "/properties/entityUpdate/properties/specimens/items/properties/specimenSubmitterId",
                "type": "string"
              },
              "specimenClass": {
                "id": "/properties/entityUpdate/properties/specimens/items/properties/specimenClass",
                "type": "string",
                "enum": ["Normal", "Tumour", "Adjacent normal"]
              },
              "specimenType": {
                "id": "/properties/entityUpdate/properties/specimens/items/properties/specimenType",
                "type": "string",
                "enum": [ "Normal - solid tissue",
                          "Normal - blood derived",
                          "Normal - bone marrow",
                          "Normal - tissue adjacent to primary",
                          "Normal - buccal cell",
                          "Normal - EBV immortalized",
                          "Normal - lymph node",
                          "Normal - other",
                          "Primary tumour - solid tissue",
                          "Primary tumour - blood derived (peripheral blood)",
                          "Primary tumour - blood derived (bone marrow)",
                          "Primary tumour - additional new primary",
                          "Primary tumour - other",
                          "Recurrent tumour - solid tissue",
                          "Recurrent tumour - blood derived (peripheral blood)",
                          "Recurrent tumour - blood derived (bone marrow)",
                          "Recurrent tumour - other",
                          "Metastatic tumour - NOS",
                          "Metastatic tumour - lymph node",
                          "Metastatic tumour - metastasis local to lymph node",
                          "Metastatic tumour - metastasis to distant location",
                          "Metastatic tumour - additional metastatic",
                          "Xenograft - derived from primary tumour",
                          "Xenograft - derived from tumour cell line",
                          "Cell line - derived from tumour",
                          "Primary tumour - lymph node",
                          "Metastatic tumour - other",
                          "Cell line - derived from xenograft tumour"]
              }
            },
            "required": ["specimenId"]
          }
        },
        "samples": {
          "id": "/properties/entityUpdate/properties/samples",
          "type": "array",
          "items": {
            "id": "/properties/entityUpdate/properties/samples/items",
            "type": "object",
            "properties": {
              "sampleId": {
                "id": "/properties/entityUpdate/properties/samples/items/properties/sampleId",
                "type": "string"
              },
              "sampleSubmitterId": {
                "id": "/properties/entityUpdate/properties/samples/items/properties/sampleSubmitterId",
                "type": "string"
              },
              "sampleType": {
                "id": "/properties/entityUpdate/properties/samples/items/properties/sampleType",
                "type": "string",
                "enum": [ "DNA", "FFPE DNA", "Amplified DNA", "RNA", "Total RNA", "FFPE RNA"]
              }
            },
            "required": ["sampleId"]
          }
        }
      },
      "required": ["apiVersion", "submissionId"]
    }
  },
  "required": ["entityUpdate"]
}
